                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="15.0dip"
                            android:src="@drawable/next_grey" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>






            <LinearLayout
